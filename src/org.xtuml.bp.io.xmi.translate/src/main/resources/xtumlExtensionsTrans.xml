<?xml version="1.0"?>
<!DOCTYPE xmitransformations>

<!-- xtumlExtensionsTrans.xml

Transformations required to translate EA models to xtuml.

-->

<xmitransformations version="2.0">
  <xmitransformation modelelement="operation" xmipattern="uml:Operation" recurse="true">
    <trigger name="type" type="attrval" attr="type" />
    <trigger name="type" type="ctext" src="type" />
  </xmitransformation>

  <!-- <xmitransformation modelelement="operation" xmipattern="ownedoperation" recurse="true">
    <trigger name="type" type="attrval" attr="type" />
    <trigger name="type" type="ctext" src="type" />
  </xmitransformation> -->

  <xmitransformation modelelement="diagramConnector" xmipattern="connector" requirexmiid="false" allowxmiidref="true" recurse="true">
    <trigger name="subject" type="attrval" attr="xmi:idref" />
    <trigger name="name" type="attrval" attr="name" />
    <trigger name="mbLabel" type="cattrval" src="labels" attr="mb" />
    <trigger name="mtLabel" type="cattrval" src="labels" attr="mt" />
    <trigger name="associationClass" type="cattrval" src="extendedProperties" attr="associationclass" />
  </xmitransformation>
  
  <xmitransformation modelelement="connectorSource" xmipattern="source" requirexmiid="false" allowxmiidref="true" recurse="true">
  	<trigger name="multiplicity" type="cattrval" src="type" attr="multiplicity" />
  	<trigger name="role" type="cattrval" src="role" attr="name" />
  </xmitransformation>
  
   <xmitransformation modelelement="connectorTarget" xmipattern="target" requirexmiid="false" allowxmiidref="true" recurse="true">
  	<trigger name="multiplicity" type="cattrval" src="type" attr="multiplicity" />
  	<trigger name="role" type="cattrval" src="role" attr="name" />
  </xmitransformation>

  <xmitransformation modelelement="eaStub" xmipattern="EAStub" requirexmiid="false" allowxmiidref="true" recurse="true">
    <trigger name="eaId" type="attrval" attr="xmi:idref" />
    <trigger name="eaType" type="attrval" attr="UMLType" />
    <trigger name="eaName" type="attrval" attr="name" />
  </xmitransformation>

  <xmitransformation modelelement="eaPropertyParameter" xmipattern="parameter" requirexmiid="false" allowxmiidref="true" recurse="true">
    <trigger name="eaId" type="attrval" attr="xmi:idref" />
    <trigger name="eaType" type="cattrval" src="properties" attr="type" />
  </xmitransformation>

  <xmitransformation modelelement="diagram" xmipattern="diagram" recurse="true">
    <trigger name="represents" type="cattrval" src="model" attr="owner" />
    <trigger name="parentAsRepresents" type="cattrval" src="model" attr="parent" />
    <trigger name="type" type="cattrval" src="properties" attr="type" />
    <trigger name="owner" type="cattrval" src="model" attr="owner" />
  </xmitransformation>

  <xmitransformation modelelement="diagramelement" requirexmiid="false" xmipattern="element">
    <trigger name="element" type="attrval" attr="subject" />
    <trigger name="actualElement" type="xmi2assoc" attr="subject" />
    <trigger name="diagramConnector" type="xmi2assoc" attr="subject" />
    <trigger name="bounds" type="attrval" attr="geometry" />
  </xmitransformation>

  <xmitransformation modelelement="providedinterface" xmipattern="provided">
    <trigger name="name" type="attrval" attr="name" />
    <trigger name="interfaceid" type="attrval" attr="xmi:idref" />
  </xmitransformation>

  <xmitransformation modelelement="requiredinterface" xmipattern="required">
    <trigger name="name" type="attrval" attr="name" />
    <trigger name="interfaceid" type="attrval" attr="xmi:idref" />
  </xmitransformation>

  <!-- collect the lower and upper bounds for associations -->
  <xmitransformation modelelement="association" xmipattern="uml:Association" recurse="true">
    <trigger name="lowerBounds" type="gcattrval" src="ownedEnd.lowerValue" attr="value" />
    <trigger name="upperBounds" type="gcattrval" src="ownedEnd.upperValue" attr="value" />
  </xmitransformation>

  <!-- collect EA specific connector information -->

</xmitransformations>